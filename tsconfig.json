{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "customConditions": ["react-native"],
    "target": "ES2021",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "types": [
      "react",
      "react-native",
      "expo-router"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["app-example","fashion-ai-api"],
  "extends": "expo/tsconfig.base"
}
